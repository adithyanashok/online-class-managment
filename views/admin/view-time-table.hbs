<section>
    <div class="container">
        <div class="row">
                <div>
                    <a class="btn btn-success mt-3" href="/admin/add-time-table/">Add Time Table</a>
                 </div>
                 <table class="table mt-5 table-bordered ">
                    <thead class="table-dark">
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Day</th>
                          <th scope="col">1st Period</th>
                          <th scope="col">2nd Period</th>
                          <th scope="col">3rd Period</th>
                          <th scope="col">4th Period</th>
                          <th scope="col">5th Period</th>
                          <th scope="col">6th Period</th>
                          <th scope="col">Edit/Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each timetable}}
                        <tr>
                          <th scope="row">{{@index}}</th>
                          <td>{{this.Day}}</td>
                          <td>{{this.FirstPeriod}}</td>
                          <td>{{this.SecondPeriod}}</td>
                          <td>{{this.ThirdPeriod}}</td>
                          <td>{{this.FourthPeriod}}</td>
                          <td>{{this.FifthPeriod}}</td>
                         <td>{{this.SixthPeriod}}</td>
                         <td>
                             <a class="btn btn-outline-primary" href="/admin/edit-day/{{this._id}}">Edit</a>
                             <a class="btn btn-outline-danger" href="/admin/delete-day/{{this._id}}" onclick="return confirm('Are You Want To Delete {{Day}}')">Delete</a>
                         </td>
                       </tr>
                       {{/each }}
                  </tbody>
              </table>
        </div>
    </div>
</section>